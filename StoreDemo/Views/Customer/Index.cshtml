@model DataProvider.Framework.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section clientTitle{
    Đăng nhập - GearShop
    }
<div class="container section">
    <div class="row" style="margin-top:3rem;">
        <div class="col-6 col-sm-12">
            <div class="col-8" style="margin-left: auto; margin-right: auto;">
                <h3 style="text-align: center;">Đăng nhập</h3>
                @using (Html.BeginForm("Login", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <input id="user-name" type="text" class="input-field" placeholder="Email" required />
                    <input id="password" type="text" class="input-field" placeholder="Password" required />
                    <button type="submit" style="margin-top: 20px;" class="submit-btn">Đăng nhập</button>
                }
            </div>
        </div>
        <div class="col-6 col-sm-12">
            <div class="col-8" style="margin-right: auto; margin-left: auto;">
                <h3 style="text-align: center;">Đăng ký</h3>
                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <input type="text" class="input-field" placeholder="Họ và tên" required />
                    <input type="email" class="input-field" placeholder="Email" required />
                    <input type="password" class="input-field" placeholder="Mật khẩu" required />
                    <input type="password" class="input-field" placeholder="Xác nhận mật khẩu" required />
                    <button type="submit" style="margin-top: 20px;" class="submit-btn">Đăng ký</button>
                }
            </div>
        </div>
    </div>
</div>

