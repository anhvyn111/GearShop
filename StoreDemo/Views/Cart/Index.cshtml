
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section clientTitle{
    Vỏ hàng - GearShop
    }

<div class="">
    <div class="container cart_container">
        <h2>Giỏ hàng</h2>
        <div class="alert" id="alert-cart" style="display: none"></div>
        @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <div id="datatable-cart">
            @{ Html.RenderAction("DataTable", "Cart");}

        </div>
    </div>
</div>
