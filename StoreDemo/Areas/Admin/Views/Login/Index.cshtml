@model DataProvider.Framework.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Assets/admin/css/root.css" rel="stylesheet" />
    <link href="~/Assets/admin/css/login.css" rel="stylesheet" />
    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600;700;900&display=swap"
          rel="stylesheet" />
    <!--Icon-->
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm"
          crossorigin="anonymous" />

    <title>Dashboard</title>
</head>
<body>
    <main>
        <div class="form-box">
            <div class="title">
                <h2>Admin</h2>
            </div>
            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "login_admin", @class="input-group" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.Username, new { @class = "input-field", @id = "admin_id", @placeholder = "Tài khoản" })
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.Password, new { @class = "input-field", @id = "admin_password", @type = "password", @placeholder = "Mật khẩu" })
                </div>
                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                    <button class="submit-btn" id="submit_btn" type="submit">Login</button>
                </div>
            }
        </div>
    </main>
    <div class="circel circel1"></div>
    <div class="circel circel2"></div>
</body>
<link href="~/Assets/admin/css/admin.css" rel="stylesheet" />
</html>
