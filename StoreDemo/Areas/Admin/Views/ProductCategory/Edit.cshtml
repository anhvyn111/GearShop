@model DataProvider.Framework.ProductCategory

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CategoryID, new { @id = "edit-id-cate"})

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @id = "edit-name-cate" }  })
            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @id = "alert-product-category-edit" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MenuID, "MenuID", htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-12">
            @Html.DropDownList("MenuID", ViewBag.Menu as SelectList, null, htmlAttributes: new { @class = "form-control", @id = "edit-menu-cate" })
            @Html.ValidationMessageFor(model => model.MenuID, "", new { @class = "text-danger" })
        </div>
    </div>
    
</div>
