@model DataProvider.Framework.ProductCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Thêm thể loại sản phẩm
}
<div class="table-responsive">
    <table>
        @using (Html.BeginForm("Create", "ProductCategory", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <th>
                    Tên thể loại:
                </th>
                <td>
                    @Html.TextBoxFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>
                    Parent ID:
                </th>
                <td>
                    @Html.EditorFor(model => model.ParentID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th>
                    Meta title:
                </th>
                <td>
                    @Html.TextBoxFor(model => model.MetaTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <button type="submit" class="btn btn-success btn-default">Tạo</button>
                </td>
            </tr>
        }
    </table>
</div>
